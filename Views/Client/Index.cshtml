@model IEnumerable<practica_Mvc.Models.Client>

<h1>List Of Client</h1>

<table class="table table-striped">
    
    @* table header *@
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">NAME</th>
        <th scope="col">LASTNAME</th>
        <th scope="col">DNI</th>
        <th scope="col">ACTIONS</th>
    </tr>
    </thead>
    
    @* Table body *@
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>@c.Lastname</td>
                <td>@c.Dni</td>
                <td><button type="button" class="btn btn-primary">Edit</button></td><td><button type="button" class="btn btn-danger">Delete</button></td>
            </tr>
        }
    </tbody>
</table>